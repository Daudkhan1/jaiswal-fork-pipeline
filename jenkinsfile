pipeline {
    agent any
    
    tools {
        jdk 'jdk17'
        maven 'maven3'
    }
    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }

    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Daudkhan1/jaiswal-fork-pipeline.git'
            }
        }
        
        stage('Compile') {
            steps {
                sh 'mvn clean compile'
            }
        }
        
        stage('Sonarqube Analysis') {
            steps {
                sh '''
                    $SCANNER_HOME/bin/sonar-scanner \
                    -Dsonar.url=http://192.168.49.2:30427/ \
                    -Dsonar.login=squ_59a41730856f0a7e450fe5015bb5d73adbd443be \
                    -Dsonar.projectName=shopping-cart \
                    -Dsonar.java.binaries=. \
                    -Dsonar.projectKey=shopping-cart -X
                '''
            }
        }

        // stage ('Owasp Scan') {
        //     steps {
        //         dependencyCheck additionalArguments: ' --scan ./', odcInstallation: 'DP'
        //         dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
        //     }
        // }

        // stage('Build Application') {
        //     steps {
        //         sh 'mvn clean install'
        //     }
        // }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'dockerhub-id') {
                        sh 'docker build -t daudkhan1/shopping-cart:latest -f docker/Dockerfile .'
                        sh "docker tag shopping-cart:latest daudidrees/shopping-cart:latest"
                        sh 'docker push daudidrees/shopping-cart:latest'
                    }
                }
            }
        }

        stage('Trigger CD Pipeline') {
            steps {
                build job: 'CD-Pipeline' , wait: true
            }
        }
    }
}

